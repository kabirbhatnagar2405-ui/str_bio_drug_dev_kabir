#SMILES to PDB
obabel -ismi Retinol.smi -OPDB --gen3d > Retinol.pdb

#SMILES to PDBQT
obabel -ismi Retinol.smi -opdbqt --gen3d -p gasteiger -o Retinol.pdbqt
obabel -ismi Retinol.smi -opdbqt --gen3d --partialcharge gasteiger -O Retinol.pdbqt

---------------Explanation-------------------------------
-ismi Retinol.smi → input is a SMILES file.
-opdbqt → output format is PDBQT.
--gen3d → generates 3D coordinates from the SMILES.
--partialcharge gasteiger → assigns Gasteiger charges.
-O Retinol.pdbqt → writes output to this file.
---------------------------------------------------------

#SDF to SMILES
obabel -isdf hello.sdf -osmi > hello.smi
obabel -isdf hello.sdf -osmi -O hello.smi

#f1 extracts first field
cut -f1 hello.smi


#Removes all the anisotropic parameters parts from the file
----> grep -vi aniso 4ppy.pdb > step1.pdb

#Removing alternate conformers
#It keeps only the data whose 1st column has ATOM, Keeps only ATOM records whose chain ID is "A" or blank, Removes the chain ID column from the output (drops character 17) 
----> awk '((substr($0,17,1)=="A" || substr($0,17,1)==" ") && $1~"^ATOM$") {print substr($0,1,16), substr($0,18,63)} ' step1.pdb > step2.pdb ;

chimera step2.pdb

#Only chain B is kept rest all the data is removed, 5th column chain B, $0 means it will print all of it, all the columns 
----> awk '($5~"^B$"){print $0}' step2.pdb > step3.pdb  

#Remove Hydrogen
grep -v "H" step3.pdb > clean_nonH.pdb

#to take chain A
awk 'substr($0,22,1)=="A" && $1=="ATOM" {print $0}' 7VKQ-anisou.pdb > 7VKQ_clean.pdb

#To find if our pdb file has a non-standard amino acid, extracts all unique ligand names including non standard amino acids
grep -E "^HETATM" 4fdi.pdb | awk '{print $3}' | sort -u

#removing alternate conformers in pymol
remove not (alt '' or alt 'A')
alter all, alt = ''

#Open LSQMAN -->> ./lx_lsqman

#Read models
re m1 1n8k.pdb
re m2 1n8k.pdb
re m2 1ye3.pdb

at all (at ma, at ca)

#ex = extract selection
#For m1: select residues A1–400 (chain A, residues 1 to 400).
#For m2: select residue A1 (chain A, residue 1).
ex m1 A1-400 m2 A1

#ap = apply LSQ fit
#Performs a least-squares superposition of the selected atoms from model m2 onto model m1.
ap m1 m2

#wr = write
#Writes out the transformed/fitted coordinates of model m2 to a new file m2.pdb.
wr m2 m2.pdb

#Then u can compare m2.pdb with 1n8k.pdb
